@model CreateRecipeFormModel

@{
    ViewData["Title"] = "Create Recipe";
}

<div class="container">
    <div class="row">
        <div clas"offset-lg-2 col-lg-8 col-xs-12">
            <h4 class="heading-margin">Recipe details</h4>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="e.g.Liona's  apple pie">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Tell us about your recipe"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="PreparationTime"></label>
                    <input asp-for="PreparationTime" class="form-control" placeholder="@DateTime.UtcNow.Minute">
                </div>
                <div class="form-group">
                    <label asp-for="CookingTime"></label>
                    <input asp-for="CookingTime" class="form-control" placeholder="@DateTime.UtcNow.Minute">
                </div>
                <div class="form-group">
                    <label asp-for="RestTime"></label>
                    <input asp-for="RestTime" class="form-control" placeholder="@DateTime.UtcNow.Minute">
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-select">
                        <option selected>Please select one</option>
                        @foreach (var category in @Model.Categories)
                        {
                            <option value=@category.Id>@category.Name</option>
                        }
                    </select>
                </div>
                <input class="btn btn-success float-end" type="submit" value="Create">
            </form>
        </div>
    </div>
</div>